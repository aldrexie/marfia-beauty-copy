<style>
  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }

  .header--layout-centered-logo {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 2rem;
    width: 100%;
  }

  .header--layout-centered-logo .header__inline-menu--left {
    grid-column: 1;
    justify-self: start;
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .header--layout-centered-logo .header__search {
    margin-right: 1rem;
  }

  .header--layout-centered-logo .header__heading {
    grid-column: 2;
    margin: 0;
  }

  .header--layout-centered-logo .header__inline-menu--right {
    grid-column: 3;
    justify-self: end;
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .header--layout-centered-logo .header__icons-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-left: 2rem;
  }

  .header--layout-centered-logo nav.header__inline-menu {
    display: flex;
    gap: 2rem;
  }

  @media screen and (max-width: 989px) {
    .header--layout-centered-logo {
      grid-template-columns: auto auto auto;
    }
    
    .header--layout-centered-logo .header__inline-menu--left,
    .header--layout-centered-logo .header__inline-menu--right ul {
      display: none;
    }

    .header--layout-centered-logo .header__inline-menu--right {
      justify-self: end;
    }
    
    .header--layout-centered-logo .header__heading {
      grid-column: 2;
    }
    
    .header--layout-centered-logo .header__icons-wrapper {
      margin-left: 0;
    }
  }

  /* Option 1: Logo Left, Menu Center, Shop Icon Right */
  .header--layout-logo-left {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header--layout-logo-left .header__heading {
    order: 1;
  }

  .header--layout-logo-left nav.header__inline-menu {
    order: 2;
    margin: 0 auto;
  }

  .header--layout-logo-left .header__icons {
    order: 3;
  }

  /* Option 2: Split Menu */
  .header--layout-split-menu {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header--layout-split-menu .header__heading {
    order: 3;
    margin-left: auto;
  }

  .header--layout-split-menu nav.header__inline-menu {
    order: 1;
    display: flex;
    gap: 2rem;
    margin-right: auto;
  }

  .header--layout-split-menu .header__icons {
    order: 2;
    display: flex;
    gap: 1rem;
  }

  .header--layout-split-menu nav.header__inline-menu {
    display: flex;
    flex: 1;
    justify-content: space-between;
  }

  .header--layout-split-menu .menu-left,
  .header--layout-split-menu .menu-right {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  img.header__heading-logo {
    filter: invert(1);
  }

  .scrolled-past-header .header__heading-logo-wrapper {
    width: 75%;
  }

  @media screen and (min-width: 990px) {
    header-drawer {
      display: none;
    }
  }

  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  summary.list-menu__item {
    padding-right: 2.7rem;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  .list-menu__item--link {
    text-decoration: none;
    padding-bottom: 1rem;
    padding-top: 1rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding-bottom: 0.5rem;
      padding-top: 0.5rem;
    }
  }

  .header__menu-item::after {
    content: '';
    position: absolute;
    width: 0;
    height: 0.5px;  /* Changed from 1px to 0.5px to make it thinner */
    bottom: 0.8rem;
    left: 1.2rem;
    background-color: rgb(var(--color-foreground));
    transition: width 0.3s ease-in-out;
  }

  .header__menu-item:hover {
    color: rgb(var(--color-foreground));
    text-decoration: none;
  }

  .header__menu-item:hover::after {
    width: calc(100% - 2.4rem);
  }

  .header__menu-item span {
    transition: text-decoration var(--duration-short) ease;
  }

  .header__menu-item:hover span {
    text-decoration: none;  /* Changed from underline to none to prevent double line */
    text-underline-offset: 0.3rem;
  }

  /* Fix dropdown menu hover */
  header-menu {
    position: relative;
  }

  header-menu details {
    position: relative;
  }

  /* Remove default details behavior */
  header-menu details > summary::marker,
  header-menu details > summary::-webkit-details-marker {
    display: none;
  }

  header-menu details > summary {
    list-style: none;
    cursor: pointer;
  }

  /* Simple hover behavior */
  header[data-dropdown-trigger="hover"] header-menu:hover .header__submenu {
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
    pointer-events: auto;
    display: block;
  }

  /* Click behavior */
  header[data-dropdown-trigger="click"] header-menu details[open] .header__submenu {
    opacity: 1;
    transform: translateY(0);
    visibility: visible;
    pointer-events: auto;
    display: block;
  }

  .header__submenu {
    position: absolute;
    top: 100%;
    left: -1px;
    background-color: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.1);
    padding: 1rem;
    min-width: 20rem;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transform: translateY(-0.5rem);
    transition: all 0.2s ease-in-out;
    z-index: 100;
    display: none;
  }

  /* Style dropdown menu items */
  .header__submenu .header__menu-item {
    padding: 0.8rem 2rem;
    color: rgba(var(--color-foreground), 0.75);
    transition: color 0.2s ease;
    white-space: nowrap;
    display: block;
    width: 100%;
  }

  /* Remove line animation from dropdown items */
  .header__submenu .header__menu-item::after {
    display: none;
  }

  .header__submenu .header__menu-item:hover {
    color: rgb(var(--color-foreground));
    text-decoration: none;
  }

  .header__submenu .header__menu-item span {
    text-decoration: none;
  }

  .header__submenu .header__menu-item:hover span {
    text-decoration: none;
  }
</style>

